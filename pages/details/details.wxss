page {
    background-color: #f5f5f5;
    height: 100%;
}

.card-wrap {
    background-color: #fff;
    width: 100%;
    border-radius: 5px;
    padding-bottom: 40rpx;
    margin-bottom: 40rpx;
}

.item-right,
.item-left {
    width: 50%;
    /* display: inline-block; */
    text-align: center;
    line-height: 80rpx;
    float: left;
}

.card-wrap .item {
    border-bottom: 1px solid #eee;
    height: 80rpx;
    display: flex;
}

.item-left {
    border-right: 1px solid #eee;
}

.btn-wrap button {
    display: block;
    background-color: #07c160;
    width: 100%;
    margin-top: 40rpx;
    color: #fff;
}