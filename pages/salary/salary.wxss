page {
    background-color: #f5f5f5;
    height: 100%;
}

.card {
    width: 100%;
    background-color: #fff;
    margin-bottom: 20px;
    border-radius: 5px;
}

.card-header {
    background-color: #07c160;
    height: 35px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    padding: 0 10px;
}

.card-header text {
    line-height: 35px;
    color: #fff;
    font-weight: bold;
}

.card-body {
    padding: 20rpx;
    height: 100rpx;
    text-align: center;
}

.salary-autual {
    font-size: 40rpx;
    display: block;
}

.salary-autual-tip {
    color: #dfdfdf;
    font-size: 28rpx;
    display: block;
}

.card-footer {
    padding: 5px 10px;
    text-align: right;
}

.view-more {
    color: #07c160;
    font-size: 28rpx;
    padding: 10rpx;
}