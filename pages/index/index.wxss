/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-login {
  font-size: 20rpx;
}

.usermotto {
  margin-top: 200px;
}

.form-wrap {
  width: 70%;
  margin-top: 60px;
}

.form-wrap .section {
  margin-bottom: 20px;
}

.form-wrap input {
  border-bottom: 1px solid #aaa;
}

.form-wrap button {
  background-color: #07c160;
  color: #fff;
  width: 100% !important;
  margin-bottom: 20px;
}

.bind-wrap button.unbind {
  background-color: #eee;
  color: #3e3e3e;
}

.bind-tip {
  color: red;
  text-align: center;
}

.bind-wrap {
  margin-top: 50px;
  text-align: center;
}

.bind-wrap button {
  background-color: #07c160;
  color: #fff;
  width: 100% !important;
  margin-top: 20px;
}

.bind-wrap .block-user {
  color: red;
}